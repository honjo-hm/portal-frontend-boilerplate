{
  "name": "portal-frontend",
  "version": "0.0.1",
  "scripts": {
    "clean:next": "rm -rf .next",
    "clean:server": "cd ./server; npm run clean",
    "clean": "../node_modules/.bin/npm-run-all -p clean:*",

    "build:server": "cd ./server; npm run build",
    "build:next": "../node_modules/.bin/next build",
    "build": "../node_modules/.bin/npm-run-all -p build:*",

    "start:server": "npm run clean; npm run build; cd ./server; npm run start",
    "stop:server": "cd ./server; npm run stop"
  },
  "dependencies": {
    "@portal-frontend/api": "^0.0.1",
    "@portal-frontend/server": "^0.0.1",
    "@portal-frontend/shared": "^0.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
